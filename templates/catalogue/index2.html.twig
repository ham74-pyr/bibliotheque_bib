{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/style1.css') }}">
{% endblock %}


{% block title %}Hello CatalogueController!
{% endblock %}

{% block h1 %}
	<select class="form-select" aria-label="Default select example">
		<option selected>Tous catégories</option>
		<option>
			<a href="{{ path('home') }}">Langages</a>

		</option>
		<option value="2">scolaires</option>
		<option value="3">Nature et animaux</option>
		<option value="4">Romans et littérature</option>
		<option value="5">Mangas</option>
	</select>

{% endblock %}


{% block body %}
<!-- Affichage du formulaire de sélection de catégorie -->
<form action="{{ path('app_categorie_index') }}" method="GET">

	<select class="form-select" name="categorie" aria-label="Default select example">
		<option value="" selected>Toutes catégories</option>
		{% for categorie in categories %}
			<option value="{{ categorie.nom }}">{{ categorie.nom }}</option>
		{% endfor %}
	</select>
	<button type="submit">Afficher</button>
</form>

<!-- Affichage des produits filtrés par catégorie -->
{% if produits %}
	{% if categorieSelectionnee %}
		<h1>Produits de la catégorie "{{ categorieSelectionnee }}" :</h1>
	{% else %}
		<h1>Tous les produits :</h1>
	{% endif %}
	<ul>
		{% for produit in produits %}
			<li>{{ produit.nom }}</li>
		{% endfor %}
	</ul>
{% else %}
	<p>Aucun produit n'a été trouvé.</p>
{% endif %}



	<!------------------------------------------------------------>


{% endblock %}
