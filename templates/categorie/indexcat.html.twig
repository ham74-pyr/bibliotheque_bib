{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Gestion des catégories{% endblock %}

{% block h1 %}Gestion des catégories{% endblock %}

{% block body %}
    <a class="btn btn-dark" href="{{ path('app_categorie_new') }}">Ajouter</a>

    <table class="table text-center mt-3">
        <thead class="bg-dark text-white">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">show</a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">edit</a>
                    {{ include('categorie/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
