{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
<section class="container inscription d-flex justify-content-center align-items-center mx-auto">
<div class="row shadow p-3">
		<div class="col">
			<img src="{{ asset('images/logo_blue-r.png')}}" mt-5 py-3" alt="f-logo" style="width:300px;">

		</div>
		<div class="col ">
			<h1 class="py-5 font-weight-normal">Inscrivez-vous</h1>
			{{ form_start(registrationForm, {'attr': {'style': 'color: white; width:300px'}}) }}

			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
			{{ form_row(registrationForm.nom) }}
			{{ form_row(registrationForm.prenom) }}
			{{ form_row(registrationForm.agreeTerms) }}
            <button type="submit" class="btn col-12 mt-3" style="background:#1d3039; color:white;">S'inscrire</button>
			{{ form_end(registrationForm) }}
		</div>
	</div>
</section>

{% endblock %}
